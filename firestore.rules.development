rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT/DEBUG MODE: より緩いルール
    // 注意: 本番環境では使用しないでください
    
    // Games collection - 完全にオープン
    match /games/{gameId} {
      allow read, write: if true;
      
      // All subcollections - 開発時は全て許可
      match /{document=**} {
        allow read, write: if true;
      }
    }
  }
}

